
block content
  h1= title
  -let results = [{shoe_name:"Nike",shoe_color:"Black",shoe_size:5},{shoe_name:"Addidas",shoe_color:"White",shoe_size:6},{shoe_name:"Puma",shoe_color:"Brown",shoe_size:7}]
  div(class="container-fluid")
  div(class="row")
    -
    each j,index in results 
            div(class="col-sm-2" onclick=`buy(${index})`)  #{j.shoe_name}  
            div(class="col-sm-2" onclick=`buy(${index})`)  #{j.shoe_color}
            div(class="col-sm-2" onclick=`buy(${index})`)  #{j.shoe_size}
script.
    function buy(r)
    {
        alert(`You have purchased item ${r+1}`);
    }